body, html

  background-color rgb(245, 244, 240)
  overflow hidden
  *
    outline: none
    box-sizing: border-box
  .red 
    color red
  .add-pointer
    cursor pointer
  button.cart-button
    color rgb(0,0,0)!important
  md-divider
    &.top-space
      margin-top 5px
    &.bottom-space
      margin-bottom 5px
  .md-toolbar-tools
    display flex
  .message-container
    min-height auto
  .logo-container
    min-height 164px
    background-color rgb(255,255,255)
    &.filsons
      min-height 64px
      background-color rgb(28, 28, 28)
    &.strand
      min-height 164px
      background-color rgb(255,255,255)
    .logo
      background-repeat no-repeat
      background-size cover
      width 140px
      height 100px
      fill white
      display block
      &.filsons
        // background-image url(images/filsons.svg)
        background-repeat no-repeat
        background-size cover
        width 160px
        height 38.20px
        fill white
        display block
      &.strand
      // background-image url(images/filsons.svg)
        background-repeat no-repeat
        background-size cover
        width 140px
        height 100px
        fill white
        display block
  .qrcode
    background-color rgb(28, 28, 28)
    min-height 111px
    padding 0
    .qrcode-message
      text-align center

    .qrcode-backdrop
      background-color rgb(255, 255, 255)
      min-width 111px
      min-height 111px

  md-content::before
    content: " ";
    position: absolute;
    top: 0; 
    left: 0;
    width: 100%; 
    height: 100%;  
    opacity: .4; 
    z-index: -1;
    background-color rgb(245, 244, 240)
  md-dialog-content.detail-view
    background-color rgb(245, 244, 240)
    md-card-content
      .md-media-xl
        background-repeat no-repeat
        background-size cover
        background-position center
        &.detail-view
          width 350px
          height 350px
    
  md-content
    background-color transparent
    position: relative;
    z-index: 1;
    &.main
      padding 0!important
    .no-click
      pointer-events none
    h2
      color #000000
    md-card
      flex-wrap wrap
      border 3px solid transparent
      .altimages
        img
          width 50px
          height 50px
          margin-bottom 3px
      md-card-title
        md-card-title-text
          .md-headline 
            font-weight 400
            letter-spacing inherit
            line-height 24px
            text-transform none
            margin-bottom 10px
          .price
            text-decoration line-through
            color #777777
          .sale
            color #000000
          .discount
            color red
          .type
            margin-top 10px
            margin-bottom 10px
          .sizes 
            margin-top 10px
            .size-button
              border 1px solid #666666!important
            
        md-card-title-media 
          background-color rgb(245, 244, 240)
          .md-media-lg
            width 250px
            height 250px
            
      .item-media
        background-repeat no-repeat
        background-size cover
        background-position center
        &.small,&.medium,&.large
          background-size contain
        &.medium
          height 200px
          width 200px
        &.large
          height 250px
          width 250px

        
.invisible
  visibility hidden
.item-description
  margin-left 15px
ripples
  position absolute
  height 100%
  width 100%
  top 0
  left 0
  pointer-events none
  z-index 999

makeRipple(size = 1em, duration = .7s, count = infinite, thickness = 2px, delay = 0s)
  position absolute
  width size
  height size
  margin-top size * -.5
  margin-left size * -.5
  border thickness solid rgba(#222, .7)
  border-radius 50%
  opacity 0
  animation-name rippleOut
  animation-duration duration
  animation-timing-function ease-out
  animation-iteration-count count
  animation-delay delay
  animation-fill-mode forwards

.ripple
  makeRipple(count: 1)

@keyframes rippleOut
  0%
    transform rotate(45deg) scale(.2)
    opacity: 0
  50%
    opacity 1
  100% 
    transform rotate(45deg) scale(2.2)
    opacity 0